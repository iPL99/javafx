<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.itgroup.controller.DeviceInformationController">
    <top>

        <ToolBar>
            <ComboBox fx:id="fieldSearch" onAction="#choiceSelect" prefHeight="0.0" prefWidth="201.0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="전체 브랜드"/>
                        <String fx:value="삼성"/>
                        <String fx:value="애플"/>
                        <String fx:value="구글"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Button fx:id="dAdd" onAction="#handleAdd" text="등록"/>
            <Button fx:id="dUpdate" onAction="#handleUpdate" text="수정"/>
            <Button fx:id="dDelete" onAction="#handleDelete" text="삭제"/>
            <Button fx:id="dClose" onAction="#handleClose" text="종료"/>
            <Label id="lblChoice" fx:id="pagingStatus" text="총 51건[1/6]"/>
        </ToolBar>

    </top>
    <center>
        <VBox alignment="TOP_CENTER" minHeight="200" BorderPane.alignment="CENTER">
            <TableView fx:id="smartphoneTable" minHeight="300">
                <columns>
                    <TableColumn prefWidth="65.0" text="번호"/>
                    <TableColumn prefWidth="78.0" text="모델명"/>
                    <TableColumn prefWidth="91.0" text="제조사"/>
                    <TableColumn prefWidth="91.0" text="출시년도"/>
                </columns>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </TableView>
        </VBox>
    </center>
    <right>
        <VBox prefHeight="390.0" prefWidth="201.0">
            <ImageView fx:id="imageView" fitHeight="328.0" fitWidth="379.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="35.0"/>
                </VBox.margin>
            </ImageView>
        </VBox>
    </right>

    <bottom>

        <Pagination fx:id="pagination" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </bottom>

</BorderPane>
